<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_view_color">
<android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="?attr/colorPrimary">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/addadress_back"
                android:layout_width="44dp"
                android:layout_height="44dp">
                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@drawable/back"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/addadress_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加地址"
                android:textColor="@color/toolbar_text_color"
                android:textSize="17sp"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>


    </android.support.v7.widget.Toolbar>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="40dp"
        android:background="@color/fragment_background_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fragment_view_color"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="收货人"
            android:textColor="#E6263238"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/addadress_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:background="@color/fragment_view_color"
            android:hint="请输入收货人姓名"
            android:textColor="#E6263238"
            android:textColorHint="#979797"
            android:textSize="14sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:background="@color/fragment_background_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fragment_view_color"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textColor="#E6263238"
            android:text="手机号"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/addadress_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:background="@color/fragment_view_color"
            android:textColorHint="#979797"
            android:inputType="phone"
            android:maxLength="11"
            android:hint="请输入手机号"
            android:textColor="#E6263238"
            android:textSize="14sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:background="@color/fragment_background_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fragment_view_color"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="所属省"
            android:textColor="#E6263238"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/addadress_province"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:background="@color/fragment_view_color"
            android:spinnerMode="dialog"
            android:textColor="#E6263238"></Spinner>
        <!--android:background="@drawable/listview_txt_background_color"-->

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:background="@color/fragment_background_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fragment_view_color"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="所属市"
            android:textColor="#E6263238"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/addadress_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:spinnerMode="dialog"
            android:layout_gravity="center_vertical"
            android:background="@color/fragment_view_color"
            android:textColor="#E6263238"></Spinner>
        <!--android:background="@drawable/listview_txt_background_color"-->

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:background="@color/fragment_background_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fragment_view_color"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="所在区/县"
            android:textColor="#E6263238"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/addadress_county"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:spinnerMode="dialog"
            android:layout_gravity="center_vertical"
            android:textColor="#E6263238"
            android:background="@color/fragment_view_color"

            ></Spinner>
        <!--android:background="@drawable/listview_txt_background_color"-->

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:background="@color/fragment_background_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fragment_view_color"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="详细地址"
            android:textColor="#E6263238"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/addadress_adress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:background="@color/fragment_view_color"
            android:hint="请输入详细地址"
            android:textColor="#E6263238"
            android:textColorHint="#979797"
            android:textSize="14sp" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="@color/fragment_background_color"/>

    <Button
        android:id="@+id/addadress_addadress"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="添加"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:background="#E6546E7A" />
</LinearLayout>