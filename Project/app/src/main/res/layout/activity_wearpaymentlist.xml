<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background_color">
    <android.support.v7.widget.Toolbar
        android:id="@+id/wearpaymentlist_toolbar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="?attr/colorPrimary">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/wearpaymentlist_back"
                android:layout_width="44dp"
                android:layout_height="44dp">
                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@drawable/back"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="磨损支付"
                android:textColor="@color/toolbar_text_color"
                android:textSize="17sp"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>


    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:id="@+id/wearpaymentlist_relativelayout01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wearpaymentlist_toolbar"
        android:background="@color/fragment_view_color">
        <TextView
            android:id="@+id/wearpaymentlist_booksnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="12sp"
            android:textColor="#898989"/>
        <!--<TextView-->
            <!--android:id="@+id/wearpaymentlist_isshow"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:padding="10dp"-->
            <!--android:text="共支付58元"-->
            <!--android:textSize="12sp"-->
            <!--android:textColor="#E7554D"/>-->
    </RelativeLayout>

    <ren.jieshu.jieshuren.loadmore.RecyclerViewWithFooter
        android:id="@+id/wearpaymentlist_load_more"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/wearpaymentlist_relativelayout01"
        android:layout_marginBottom="51dp"
        android:layout_marginTop="10dp">
    </ren.jieshu.jieshuren.loadmore.RecyclerViewWithFooter>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/fragment_view_color"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/wearpaymentlist_bookstotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:text="订单合计：0 个"
            android:textColor="#263238"
            android:textSize="14sp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="磨损支付： "
                android:textColor="#263238"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/wearpaymentlist_pricetotalall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥0.00"
                android:textColor="#E7554D"
                android:textSize="14sp"/>
        </LinearLayout>
        <Button
            android:id="@+id/wearpayment_returnbook"
            android:layout_width="126dp"
            android:layout_height="50dp"
            android:text="磨损支付"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_alignParentRight="true"
            android:background="#E7554D"
            />
    </RelativeLayout>
</RelativeLayout>