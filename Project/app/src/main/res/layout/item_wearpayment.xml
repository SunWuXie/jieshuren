<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fragment_view_color">
        <TextView
            android:id="@+id/item_wearpayment_return_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="订单编号：10000025415038"
            android:textSize="12sp"
            android:textColor="#898989"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/item_wearpayment_compensate_pirce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:textSize="12sp"
            android:textColor="#E7554D"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/item_wearpayment_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/fragment_view_color"
        ></android.support.v7.widget.RecyclerView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fragment_view_color"
        android:layout_marginTop="1dp"
        android:padding="10dp">
        <TextView
            android:id="@+id/item_wearpayment_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="345.67"
            android:textSize="11sp"
            android:textColor="#E7554D"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/item_wearpayment_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本书 押金合计："
            android:textSize="11sp"
            android:textColor="#898989"
            android:layout_toLeftOf="@id/item_wearpayment_price" />
        <TextView
            android:id="@+id/item_wearpayment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="7"
            android:textSize="11sp"
            android:textColor="#E7554D"
            android:layout_toLeftOf="@id/item_wearpayment_02" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共"
            android:textSize="11sp"
            android:textColor="#898989"
            android:layout_toLeftOf="@id/item_wearpayment_count" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fragment_view_color"
        android:padding="10dp"
        android:layout_marginTop="1dp">
        <TextView
            android:id="@+id/item_wearpayment_tv_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我想支付"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:textColor="#E6263238" />
        <TextView
            android:id="@+id/item_wearpayment_tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_wearpayment_tv_01"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:text="0.00"
            android:textSize="14sp"
            android:textColor="#E7554D" />
        <TextView
            android:id="@+id/item_wearpayment_tv_04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_wearpayment_tv_number"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:text="元"
            android:textSize="14sp"
            android:textColor="#E7554D" />
        <ImageView
            android:id="@+id/item_wearpayment_add"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/add"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/item_wearpayment_tv_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:textSize="14sp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/item_wearpayment_add"
            android:layout_centerVertical="true"
            android:textColor="#E6000A12" />
        <TextView
            android:id="@+id/item_wearpayment_tv_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:textSize="14sp"
            android:layout_toLeftOf="@id/item_wearpayment_tv_02"
            android:layout_centerVertical="true"
            android:textColor="#E6000A12" />
        <ImageView
            android:id="@+id/item_wearpayment_del"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/del"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/item_wearpayment_tv_03" />
    </RelativeLayout>
</LinearLayout>